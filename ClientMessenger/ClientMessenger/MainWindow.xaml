<Window x:Class="ClientMessenger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wellcome" Height="600" Width="600" ResizeMode="CanMinimize">
    <Grid Background="#FF0097FF">
        <Label Content="Добро пожаловать!" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="45" FontFamily="Gill Sans Ultra Bold Condensed" Margin="0,-450,0,0"/>
        <Label Content="Ведите ваше имя:" HorizontalAlignment="Center"  VerticalAlignment="Center" Foreground="White" FontSize="30" FontFamily="Gill Sans Ultra Bold Condensed"  Margin="0,-100,0,0"/>
        <TextBox Name="textName" TextWrapping="NoWrap" Height="50" Width="350" HorizontalAlignment="Center"  VerticalAlignment="Center"  Margin="0,15,0,0" Background="White" BorderThickness="1" BorderBrush="#00ABADB3" Padding="5,0,5,0" VerticalScrollBarVisibility="Disabled" FontSize="30" VerticalContentAlignment="Center" KeyDown="textName_KeyDown"/>
        <Button  Content="Войти" HorizontalAlignment="Center" Margin="0,300,0,0" VerticalAlignment="Center" Width="250" Height="100" BorderBrush="#00ABADB3" FontSize="35" FontFamily="Gill Sans Ultra Bold Condensed" Foreground="#FF0097FF" RenderTransformOrigin="0,0" Click="Button_Click" Background="White"/>
    </Grid>
</Window>
